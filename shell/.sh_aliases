alias ..='cd ..'
alias ...='cd ..\..'
alias ll='ls -al'
alias :q='exit'

alias please='sudo'

CODE_DIR="$HOME/Documents/Code"
for proj_path in $CODE_DIR/*/; do
  proj="$(basename "$proj_path")";
  alias "code/$proj"="cd $CODE_DIR/$proj";
  alias "vscode/$proj"="vscode $CODE_DIR/$proj";
done
alias code='cd $CODE_DIR'
alias gode="cd $GOPATH"

alias dotfiles='pushd ~/.dotfiles'

alias alpine='docker run --rm -it alpine sh'

alias gcm='git commit -m'
alias gap='git add -p'
alias gaa='git add -A'
alias gst='git status'
alias gpl='git pull'
alias gps='git push'
alias grhh='git reset --hard HEAD'
alias clone='code && git clone'

alias k="kubectl"
alias kucocuco="kubectl config current-context"

alias sh_aliases='$EDITOR ~/.sh_aliases'
alias sh_aliases.private='$EDITOR ~/.sh_aliases.private'
alias sh_functions='$EDITOR ~/.sh_functions'
alias sh_settings='$EDITOR ~/.sh_settings'

[ -f $HOME/.sh_aliases.private ] && source $HOME/.sh_aliases.private
